<section class="super-box" id="ideas-gallery-headline">
  <div class="lead">
    <h1 class="white-text">Ideas Marketplace</h1>
    <h6>
      Discover, connect and contribute to open source projects and ideas
      from organizations, developers, and teams all over the world
    <h6>
  <div>
</section>

<button class="create-idea-button blue">Create Idea</button>

<section class="super-box group" id="ideas-gallery">

  <div class="box grid-box">
    <div class="grid ideas-wrapper">

      <!-- Ideas -->
      <% @ideas.each do |idea| %>
        <div class="mdl-card with-shadow">
          <div class="mdl-card__title">
            <h6 class="mdl-card__title-text truncate">
              <i class="fa fa-puzzle-piece"></i>
              &nbsp;<%= link_to idea.name ,idea %>
            </h6>
          </div>
          <div class="mdl-card__supporting-text">
            <%= idea.description %>
          </div>
          <div class="mdl-card__actions">
            <a class="idea-icons">
              <i class="fa fa-eye"></i> <%= idea.viewers.size %>
            </a>
            <a class="idea-icons">
              <i class="fa fa-heart"></i> 0
            </a>
            <a class="idea-icons">
              <i class="fa fa-comment"></i></i> <%= idea.comments.size %>
            </a>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  
</section>
