
<div id="login-modal">
  <div class="modal-top">
    <div class="modal-header">
      <span class="close-button"></span>
    </div>

    <div class="modal-content">
    
      <%= form_with scope: :authentication, url: '/login', local: true, id: :global do |form| %>
        <div div class="field">
          <%= form.label :username %>
          <%= form.text_field :username, id: :username, placeholder: 'Enter your username' %>
          <%= form.label :password %>
          <%= form.password_field :password, id: :password, placeholder: 'Enter your password' %>
          <%= form.submit :login %>
        </div>
      <% end %>
      
    </div>
  </div>
  
  <div class="modal-bottom">
    <div class="login-services">
      <a href="/auth/google_oauth2" class="login google"><i class="fa fa-google"></i>&nbsp;google</a>
      <a class="login github"><i class="fa fa-github"></i>&nbsp;github</a>
      <a class="login facebook"><i class="fa fa-facebook-square"></i>&nbsp;facebook</a>
    </div>
  </div>
</div>