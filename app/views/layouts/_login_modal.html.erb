
<div id="login-modal" class="acorn-modal">
  <div class="modal">
    <div class="modal-top">
      <div class="modal-header">
        <span class="close-button"></span>
        <div class="login-header">
          Shall we begin?
        </div>
      </div>

      <div class="modal-content">

        <%= form_tag '/login' do %>
          <%= label_tag :username %>
          Username: <%= text_field_tag :username %>
          <%= label_tag :password %>
          Password: <%= password_field_tag :password %>
          <%= submit_tag "Login" %>
        <% end %>
        
      </div>
      
    </div>
    <div class="modal-bottom">
      <button class="close-decision-history">Close</button>
    </div>
  </div>
</div>