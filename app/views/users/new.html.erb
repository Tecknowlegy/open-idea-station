<div id="signup-background">
  <div class="signup-headline">
    <h5>Create your account</h5>
  </div>

  <div class="signup-form">
    <%= form_with scope: :user, url: '/signup', local: true, id: :global do |form| %>

      <div div class="field">
        <%= form.text_field :username, id: :username, placeholder: 'Username' %>
      </div>

      <div div class="field">
        <%= form.text_field :email, id: :email, placeholder: 'Email' %>
      </div>

      <div div class="field">
        <%= form.password_field :password, id: :password, placeholder: 'Password' %>
      </div>

      <div div class="field">
        <%= form.password_field :password_confirmation, id: :password_confirmation, placeholder: 'Confirm password' %>
      </div>
    
      <div class="actions">
        <%= form.submit "Submit" %>
      </div>

    <% end %>
  </div>
  <div class="external-services">
    <p>Or signup using</p>
    <div class="services">
      <a href="/auth/google_oauth2" class="signup google"><i class="fa fa-google"></i>&nbsp;google</a>
      <a class="signup github"><i class="fa fa-github"></i>&nbsp;github</a>
      <a class="signup facebook"><i class="fa fa-facebook-square"></i>&nbsp;facebook</a>
    </div>
  </div>
</div>
