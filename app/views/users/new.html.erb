<h1>Users#signup</h1>

<%= form_with scope: :user, url: '/signup', local: true do |form| %>

  <div div class="field">
    <%= form.label :username %><br>
    Username: <%= form.text_field :username, id: :username %>
  </div>

  <div div class="field">
    <%= form.label :email %><br>
    Email: <%= form.text_field :email, id: :user_email %>
  </div>

  <div div class="field">
    <%= form.label :password %><br>
    Password: <%= form.password_field :password, id: :user_password %>
  </div>
 
  <div class="actions">
    <%= form.submit "Submit" %>
  </div>

<% end %>
